{
  "name": "gcp-fe-core",
  "version": "0.0.1",
  "description": "LINE content platform integrations.",
  "main": "server.js",
  "scripts": {
    "start": "nodemon ./server.js --exec babel-node -e js",
    "server": "babel-node ./server.js",
    "eslint-check": "node_modules/eslint/bin/eslint.js --print-config . | eslint-config-prettier-check",
    "eslint-fix:commit": "npm run eslint-check && node_modules/eslint/bin/eslint.js -c .eslintrc.js --ignore-pattern '!.eslintrc.js' --fix --ext .ts,.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "GCP-FE",
    "graphql",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "dotenv": "^6.2.0",
    "eslint": "^5.13.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.3",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4"
  },
  "dependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "apollo-datasource-rest": "^0.3.1",
    "apollo-server-express": "^2.3.3",
    "express": "^4.16.4",
    "graphql": "^14.1.1",
    "ramda": "^0.26.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts, js}": [
      "npm run eslint-fix:commit",
      "git add"
    ]
  }
}
