# editorconfig.org
# Please install the plugin to your editor

root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,css,scss,html}]
indent_size = 2
quote_type = single

[*.{md,markdown}]
trim_trailing_whitespace = false
